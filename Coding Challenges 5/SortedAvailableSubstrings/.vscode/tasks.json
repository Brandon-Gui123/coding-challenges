{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++: build workspace directory",
            "problemMatcher": "$gcc",
            "group": "build",
            "detail": "compiler: /usr/bin/g++",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++2a",
                "-pedantic",
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wsign-conversion",
                "-g",
                "src/*.cpp",
                "-o",
                "out/${workspaceFolderBasename}"
            ],
        }
    ]
}